<%= @game.name %>
<%= @game.location %>
<%= @game.date_time %>

<% @game.joins.each do |join| %>
  <%= join.user.username %>
<% end %>

<% if user_signed_in? %>

  <% if @game.is_created_by(current_user) %>
    <%= link_to 'Delete Game', game_path(@game), method: :delete %>
    <%= link_to 'Edit Game', edit_game_path(@game) %>
  <% end %>

  <% if current_user.has_joined?(@game) && !(@game.is_full?) %>
    <%= link_to 'Leave Game', game_join_path(@game, @game.joined_by(current_user)), method: :delete %>
  <% else %>
    <%= link_to "Join Game", new_game_join_path(@game) %>
  <% end %>
<% end %>