<%= simple_form_for @game, :html => { :class => 'form-horizontal' } do |f| %>
<fieldset>
<legend> Game Registration</legend>
<div class="control-group">
  <%= f.input :name %>
  <div class="control-group">
  <%= f.input :address %>
  <div class="control-group">
  <%= f.input :date_time, as: :datetime_picker, wrapper: :ranged_datetime %>
  </div>
  </div>
  </div>
  <div class="form-actions">
  <%= f.submit 'Create a game' %>
<% end %>
</fieldset>