<!DOCTYPE html>
<html>
<head>
  <title>FootyFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
  <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">FootyFinder</a>
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav" style="float:right">
          <% if user_signed_in? %>
            <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'imgold' %></li>
          <% else %>
            <li><%= link_to "Sign In", new_user_session_path, class: 'imgold' %></li>
            <li><%= link_to "Sign Up", new_user_registration_path, class: 'imgold' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">

  <div class="logo-container">
    <%= image_tag 'logo.png' %>
  </div>

  <div class="notice"><%= notice %></div>
  <div class="alert"><%= alert %></div>

  <%= yield %>
  </div>

</body>
</html>
